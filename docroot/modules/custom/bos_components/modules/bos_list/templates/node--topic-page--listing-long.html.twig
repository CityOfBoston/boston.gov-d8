 * Complete documentation for this file is available online.
 *
 * @see https://drupal.org/node/1728164
 #}

<article class="{{ classes }} clearfix node-{{ node.id }} desktop-3-col tablet-2-col mobile-1-col"{{ attributes }}>
  <div class="topic-wrapper">
    <div class="topic-highlight-area">
      <a href="{{ node_url }}" class="item-link" title="Go to {{ title.0['#context'].value }}">{{ title.0['#context'].value }}</a>
      <div class="image-wrapper">
        {{ content.field_intro_image }}
      </div>
      <div class="topic-details">
        <div class="grid-of-topics-label">
          Guide:
        </div>
        <div class="topic-listing-title">
          {{ title.0['#context'].value }}
        </div>
      </div>
    </div>
    <div class="topic-link-area">
      <ul class="topics-links">
        {% for nav_link in nav_links %}
          <li>{{ nav_link }}</li>
        {% endfor %}
        {% if num_components %}
          <li><a href="{{ node_url }}"> SEE {{ num_components }} MORE </a></li>
        {% endif %}
      </ul>
    </div>
  </div>
</article>
