{{ dd(content) }}
<article id="node-{{ node.id }}" class="{{ classes }} post-featured-item-wrapper clearfix mobile-1-col">
  <a href="{{ node.url }}" class="item-link">{{ content.title.0['#context'].value }}</a>
  <div class="mobile-1-col tablet-1-col desktop-2-col thumb-column featured-item-thumb featured-post-thumb">
      <div class="featured-thumb-wrapper">
        {% if content.field_thumbnail %}
          {{ content.field_thumbnail }}
        {% else %}
          <div class="news-item-default-image" style="background-image: url('{{ asset_url }}/images/public/icons/news.svg');">
            <span>Default News image</span>
          </div>
        {% endif %}
        <div class="date-flag">{{ content.field_published_date.value }}</div>
      </div>
    </div>
    <div class="mobile-1-col tablet-1-col desktop-2-col featured-item-details">
      <div class="text-wrapper">
        <div class="feature-header">
          <h3 class="title">{{ content.title.0['#context'].value }}</h3>
        <div class="department-title">{{ content.field_contact }}</div>
      </div>
      <div class="intro-text">{{ content.field_intro_text }}</div>
    </div>
  </div>
</article>
