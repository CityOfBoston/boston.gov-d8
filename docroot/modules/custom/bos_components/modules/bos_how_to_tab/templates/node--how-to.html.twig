<input id="tabMenuCTRL" type="checkbox" name="tab-menu-ctrl" class="tab-menu-ctrl" aria-hidden="true">

{% if content.field_intro_image %}
  {{ content.field_intro_image }}
{% endif %}

<div class="hro {% if content.field_intro_image %}hro--t{% else %}hro--d{% endif %} hro--wh b--fw">
  <div class="hro-c b-c">
    <h1 class="hro-t">{{ title }}</h1>
    {% if content.body %}
      <div class="hro-st hro-st--l">{{ content.body }}</div>
    {% endif %}
  </div>
  <ul class="tab">
    <li class="tab-li tab-li-close">
      <label for="tabMenuCTRL" class="tab-li-a tab-li-a--c" aria-hidden="true">Close</label>
    </li>
  </ul>
</div>

<article class="{{ classes }} clearfix node-{{ node.id }} tab-pc p-t500"{{ attributes }}>
  {% if content.field_updated_date %}
    <div class="brc-lu">
      Last updated:{{ content.field_updated_date }}
    </div>
  {% endif %}
    <div class="tabbed-info-wrapper desktop-100">
      <div class="column mobile-100 desktop-66-left">
        {% if content.field_how_to_tabs %}
          {{ content.field_how_to_tabs }}
        {% endif %}
      </div><!-- end .desktop-66-left -->
      <div class="column mobile-100 desktop-33-right">
        {% if content.field_payment_info %}
        <div class="list-item">
          {{ content.field_payment_info }}
        </div>
        {% endif %}
        {% if content.field_links %}
        <div class="list-item">
          {{ content.field_links }}
        </div>
        {% endif %}
        {% if content.field_need_to_know %}
        <div class="list-item">
          {{ content.field_need_to_know }}
        </div>
        {% endif %}
        {% if content.field_contact %}
        <div class="contact-info">
          {{ content.field_contact }}
        </div>
        {% endif %}
        {% if content.field_sidebar_components %}
        <div class="list-item-wrapper">
          {{ content.field_sidebar_components }}
        </div>
        {% endif %}
      </div><!-- end .desktop-33-right -->
      <div class="clearfix"></div>
    </div><!-- end .tabbed-info-wrapper -->
    {% if content.field_components %}
      <div class="tab-components desktop-100" {{ content_attributes }}>
        {{ content.field_components }}
      </div>
    {% endif %}
</article>
