{#
/**
 * @file
 * Theme override to display a node.
 *
#}
{{ breakpoint() }}
<article {{ attributes.addClass('cdp m-t500 g--1 g--3--sl') }}>
  <a href="#" class="cdp-l d-b p-a300">

    {{ content.field_person_photo }}

    <div>

      <div class="cdp-t t--sans t--upper">
        {{ content.title.0 }}
      </div>

      {% if content.field_position_title['#items'].getValue() %}
        <div class="cdp-st t--subinfo t--g300">
          {{ content.field_position_title }}
        </div>
      {% endif %}

    </div>

  </a>

  {% if preferred_contact %}
    {% if preferred_contact == 'email' %}
      {{ content.field_email }}
    {% elseif preferred_contact == 'phone' %}
      {{ content.field_phone_number }}
    {% endif %}
  {% endif %}
</article>
