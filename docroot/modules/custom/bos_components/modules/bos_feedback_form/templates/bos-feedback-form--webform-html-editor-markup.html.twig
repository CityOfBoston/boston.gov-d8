{{- content -}}
{% if has_close_button %}
  <div style="display: flex; clear: both;">
    <button type="button"
            class="btn button button--primary ui-widget"
            title="Close"
            onclick="event.preventDefault(); jQuery('.ui-dialog-titlebar-close').click();">
      Close
    </button>
    <div style="clear: both;"></div>
  </div>
{% endif %}
