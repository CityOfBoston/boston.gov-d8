    "Heat Type" : attribute(data, pType.type ~ '_HEAT_TYP'),
    "Fireplaces" : attribute(data, pType.type ~ '_FPLACE'),
    "Interior Condition" : attribute(data, pType.type ~ '_INT_CND'),
    "Total Rooms" : attribute(data, pType.type ~ '_TOT_RMS'),
    "Bedrooms" : attribute(data, pType.type ~ '_BDRMS'),
    "Bedroom Type" : "",
    "Full Bathrooms" : attribute(data, pType.type ~ '_FULL_BTH'),
    "Half Bathrooms" : attribute(data, pType.type ~ '_HALF_BTH'),
    "Bath Style 1" : attribute(data, pType.type ~ '_BTH_STYLE'),
    "Bath Style 2" : attribute(data, pType.type ~ '_BTH_STYLE2'),
    "Bath Style 3" : attribute(data, pType.type ~ '_BTH_STYLE3'),
