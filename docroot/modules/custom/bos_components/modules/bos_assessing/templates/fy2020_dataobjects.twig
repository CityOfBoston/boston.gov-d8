{% set pType = (attribute(data,'PTYPE')  == '0102') 
	? {'type':'U', 'name':'Apartment Building', 'alt':'S'} 
	: {'type':'R', 'name':'Single Family Home', 'alt':'R'}
%}
{% set unitDisplay = (attribute(data,'PTYPE') == '0102') ? ' #'~attribute(data,'UNIT_NUM') : '' %}
{% set masterParcelId = attribute(data,'GIS_ID') %}
{% set masterParcelLink = "<a href="~attribute(data,'GIS_ID')~">"~attribute(data,'GIS_ID')~"</a>" %}

{% set dataMain = {
    "Grade" : "",
    "Exterior Condition" : attribute(data, pType.alt ~ '_EXT_CND'),
    "Exterior Style" : attribute(data, pType.alt ~ '_BLDG_STYL'),
    "Exterior Finish" : attribute(data, pType.alt ~ '_EXT_FIN'),
    "Foundation" : "",
    "Roof Cover" : "",
    "Roof Structure" : attribute(data, pType.alt ~ '_ROOF_TYP')}
%}

{% set dataCondo= {
	"Master Parcel" : masterParcelLink,
	"Corner Unit" : attribute(data, 'U_CORNER'),
    "Penthouse Unit" : "",
    "Floor" : attribute(data,'U_BASE_FLOOR'),}
%}

{% set dataUnit = {
    "Land Use" : "",
    "Story Height" : attribute(data,'NUM_FLOORS'),
