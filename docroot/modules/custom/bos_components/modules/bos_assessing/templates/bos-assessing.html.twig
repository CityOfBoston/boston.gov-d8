#}
<style>
#assessing {
	margin-top:50px;
}
#assessing .dl-d {
	text-align:right;
}
#assessing .squiggle-border-bottom{
	padding-top:10px;
}
#assessing #parcel_info .dl-i{
	border-bottom:0;
	/*padding:8px 0;*/
}
#assessing .custom .detail-item{
	line-height: normal;
    font-size: 90%;
}
.assessing-right-column li.dl-i{
	border-bottom:0;
}
.assessing-right-column li.dotted{
	border-bottom: 1px dashed #e0e0e0;
}
.assessing-right-column .dl-t{
	width:80%;
}
.assessing-right-column .dl-d{
	width:20%;
}

#map-container{
	width:100%;
	height:400px;
	margin-bottom:20px;
}
</style>

{% set data = data_full.result.records[0] %}
{% set coords = data_coords.features[0].geometry.coordinates %}

{% set dataCondo = {
    "Master Parcel" : attribute(data,'GIS_ID'),
    "Grade" : "",
    "Exterior Condition" : "",
    "Exterior Finish" : "",
    "Foundation" : "",
    "Roof Cover" : "",
    "Roof Structure" : "",

}%}
{% set pType = (attribute(data,'PTYPE')  == '0102') ? 'U' : 'R' %}
{% set dataUnit = {
    "Complex" : "",
    "Land Use" : "",
    "Year Built" : attribute(data,'YEAR_BUILT'),
    "Story Height" : "",
    "Floor" : attribute(data,'NUM_FLOORS'),
    "Orientation" : attribute(data,'GIS_ID'),
    "View" : attribute(data, pType ~ '_VIEW'),
    "Corner Unit" : attribute(data, pType ~ '_CORNER'),
    "Penthouse Unit" : attribute(data,'GIS_ID'),
    "AC Type" : attribute(data, pType ~ '_AC'),
    "Heat Type" : attribute(data, pType ~ '_HEAT_TYP'),
    "Fireplaces" : attribute(data, pType ~ '_FPLACE'),
    "Interior Condition" : attribute(data, pType ~ '_INT_CND'),
    "Total Rooms" : attribute(data, pType ~ '_TOT_RMS'),
    "Bedrooms" : attribute(data, pType ~ '_BDRMS'),
    "Bedroom Type" : "",
    "Full Bathrooms" : attribute(data, pType ~ '_FULL_BTH'),
    "Half Bathrooms" : attribute(data, pType ~ '_HALF_BTH'),
    "Bath Style 1" : attribute(data, pType ~ '_BTH_STYLE'),
    "Bath Style 2" : attribute(data, pType ~ '_BTH_STYLe2'),
    "Bath Style 3" : attribute(data, pType ~ '_BTH_STYLe3'),
    "Number of Kitchens" : "",
    "Kitchen Type" : "",
    "Kitchen Style 1" : attribute(data, pType ~ '_KITCH_STYLE'),
    "Kitchen Style 2" : attribute(data, pType ~ '_KITCH_STYLE2'),
    "Kitchen Style 3" : attribute(data, pType ~ '_KITCH_STYLE3'),
    "Parking Spots" : attribute(data, pType ~ '_NUM_PARK'),
    "Parking Type" : "",
    "Parking OwnerShip" : "",
