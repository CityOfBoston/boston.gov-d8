{#
/**
 * @file
 * Default theme implementation for detail item.
 *
 * Available variables:
 * - title: The title value of the item.
 * - label: The label value of the item.
 * - body: The content value of the item.
 * - icon: The icon value of the detail item.
 * - date:
 * - currentState:
 *
 * - classes: Array of classes to be applied to detail, icon, label, and body
 *   elements.
 */
#}


<div class="bh-project-timeline-item g g--12 timeline-rfp timeline-rfp-{{ currentState }}">

  <div class="g g--2">

    <div typeof="foaf:Image" class="bh-project-timeline-icon">
      {{ icon }}
    </div>

  </div>

  <div class="g--10 m-b600 m-h100 p-a000  bh-project-timeline-content">

    <h6 class="m-b200 m-t000 bh-timeline-season t--cb">{{ date }}</h6>

    <div class="b b--w p-l600 p-r600 p-b200 m-b400">

      <h3 class="m-v000 p-t200">{{ title }}</h3>

      <div class="p-t200 p-b200">{{ body }}</div>



      <div class="m-v200 bc--r t--nowrap t--s100">
        <a href="{{ url }}" class="g">
          <div typeof="foaf:Image" class=""> {{ rfpListIcon }} </div>
          <span  class="t--sans t--bold m-t100 m-l200">{{ label }}</span>
        </a>
      </div>


    </div>


  </div>

</div>

