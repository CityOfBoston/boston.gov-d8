{#
/**
 * @file
 * Default theme implementation to present an emergency alert entity.
 *
 * This template is used when viewing a registered emergency alert's page,
 * e.g., /admin/content/emergency-alert)/123. 123 being the emergency alert's ID.
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.title'.
 * - attributes: HTML attributes for the container element.
 *
 * @see template_preprocess_emergency_alert()
 */
#}
<article{{ attributes }}>
  {{ title_suffix }}
  <div class="b-c b-c--ntp b-c--nbp">
    <div{{ para_attributes }}>
      <div class="b-c">

        <div class="t--upper t--sans lh--000">
          Last updated: {{ content.field_updated_date }}
        </div>

        <div class="str m-v300">
          <div class="str-c">
            <div class="str-t">
              {{ bos_title }}
            </div>
          </div>
        </div>

        <div class="t--sans lh--000 m-b500">
          {{ content.field_description }}
        </div>

        {% if content.field_link %}
          {{ content.field_link|raw }}
        {% endif %}
      </div>
    </div>
  </div>
</article>
