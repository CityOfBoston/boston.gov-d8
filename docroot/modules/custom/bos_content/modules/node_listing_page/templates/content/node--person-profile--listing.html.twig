 * Complete documentation for this file is available online.
 *
 * @see https%0%
 #}
<article class="cdp m-t500 g--1 g--3--sl"{{ attributes }}>
  <a href="{{ node_url }}" class="cdp-l d-b p-a300">
    {{ content.field_person_photo }}
    <div>
      <div class="cdp-t t--sans t--upper">{{ title }}</div>
      {% if content.field_position_title %}
        <div class="cdp-st t--subinfo t--g300">{{ content.field_position_title }}</div>
      {% endif %}
    </div>
  </a>
  {{ if ($content.field_preferred_contact) :  }}
    {{ if($content.field_preferred_contact['#items[0]['value) :  }}
      {% if content.field_preferred_contact['#items[0]['value == 'phone' %}
        {% if content.field_phone_number %}
          {{ content.field_phone_number }}
        {% endif %}
      {% endif %}
      {% if content.field_preferred_contact['#items[0]['value == 'email' %}
        {% if content.field_email %}
          {{ content.field_email }}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endif %}
</article>
