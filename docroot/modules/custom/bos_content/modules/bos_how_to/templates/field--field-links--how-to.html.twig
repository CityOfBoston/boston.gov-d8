 * Downloads Field template.
 #}
{% set item_list = {
  '#theme': 'item_list',
  '#type': 'ul',
  '#items': []
 } %}

{% for item in items %}
  {% set item_list['#items'][] = item %}
{% endfor %}

{% set detail_item_variables = {
  'label': 'Downloads:',
  'body': item_list,
  'classes': {
    'detail': 'detail-item',
    'icon': 'icon-download',
    'body': 'detail-item__body--secondary download-list uppercase-sm-list'
  }
} %}
{# theme('detail_item', $detail_item_variables) #}
{% include 'detail-item.html.twig' with detail_item_variables %}