{#
 * @file
 * Returns the HTML for a node.
 *
 * Complete documentation for this file is available online.
 *
 * @see https%0%
 #}
<input id="tabMenuCTRL" type="checkbox" name="tab-menu-ctrl" class="tab-menu-ctrl" aria-hidden="true">
{% for index,tab in tabs %}
<input id="tabCTRL{{ index }}" type="radio" name="tab-ctrl" class="tab-ctrl tab-ctrl-{{ index }}" data-href="#how-to-tab" {% if index == 0 %}checked="" {% endif %}aria-hidden="true">
{% endfor %}

<div class="hro {{ image_class }} hro--wh b--fw">
  <div class="hro-c b-c">
    <h1 class="hro-t">{{ node.label }}</h1>
    {% if content.body %}
      <div class="hro-st hro-st--l">{{ content.body }}</div>
    {% endif %}
  </div>
  <ul class="tab">
    {% for index,tab in tabs %}
    <li class="tab-li tab-li-{{ index }}">
      <label for="tabMenuCTRL" class="tab-li-m" aria-hidden="true">{{ tab }}</label>
      <label for="tabCTRL{{ index }}" data-href="#{{ tab|lower|replace(' ','-') }}" class="tab-li-a tab-li-a-{{ index }}">
        {{ tab }}
      </label>
    </li>
    {% endfor %}
    <li class="tab-li tab-li-close">
      <label for="tabMenuCTRL" class="tab-li-a tab-li-a--c" aria-hidden="true">Close</label>
    </li>
  </ul>
</div>

<article{{ attributes }}>
  {{ drupal_block('system_breadcrumb_block') }}

  <div class="brc-lu">
    {% if (content.field_updated_date["#items"]) %}
      Last updated: {{ content.field_updated_date }}
    {% elseif (content.field_published_date["#items"]) %}
      Last updated: {{ content.field_published_date }}
    {% else %}
      Not published yet!
    {% endif %}
  </div>

  {{ title_suffix }}
    <div class="tabbed-info-wrapper desktop-100">
      <div class="column mobile-100 desktop-66-left">
        {% if content.field_how_to_tabs %}
          {{ content.field_how_to_tabs }}
        {% endif %}
      </div><!-- end .desktop-66-left -->
      <div class="column mobile-100 desktop-33-right">
        {% if not node.field_payment_info.isempty %}
        <div class="list-item">
          {{ content.field_payment_info }}
        </div>
        {% endif %}
        {% if not node.field_links.isempty %}
        <div class="list-item">
          {{ content.field_links }}
        </div>
        {% endif %}
        {% if not node.field_need_to_know.isempty %}
        <div class="list-item">
          {{ content.field_need_to_know }}
        </div>
        {% endif %}
        {% if not node.field_contact.isempty %}
        <div class="contact-info">
          {{ content.field_contact }}
        </div>
        {% endif %}
        {% if not node.field_sidebar_components.isempty %}
        <div class="list-item-wrapper">
          {{ content.field_sidebar_components }}
        </div>
        {% endif %}
      </div><!-- end .desktop-33-right -->
      <div class="clearfix"></div>
    </div><!-- end .tabbed-info-wrapper -->
    {% if not node.field_components.isempty %}
      <div class="tab-components desktop-100" {{ content_attributes }}>
        {{ content.field_components }}
      </div>
    {% endif %}
</article>
