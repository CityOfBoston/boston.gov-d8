<article{{ attributes }}>
  {{ drupal_block('system_breadcrumb_block') }}

  <div class="brc-lu">
    {% if (content.field_updated_date["#items"]) %}
      Last updated: {{ content.field_updated_date }}
    {% elseif (content.field_published_date["#items"]) %}
      Last updated: {{ content.field_published_date }}
    {% else %}
      Not published yet!
    {% endif %}
  </div>

  {{ title_suffix }}
    <div class="tabbed-info-wrapper desktop-100">

      {% if content.body %}
        <div class="hro-st hro-st--l">{{ content.body }}</div>
      {% endif %}

      <div class="column mobile-100 desktop-66-left">

        {% if content.field_how_to_tabs %}
          {{ content.field_how_to_tabs }}
        {% endif %}

        {% if not node.field_components.isempty %}
          <div class="hr--dash m-v600"></div>
          <div class="tab-components desktop-100 p-t600 m-t400" {{ content_attributes }}>
            {{ content.field_components }}
          </div>
        {% endif %}

      </div><!-- end .desktop-66-left -->
      <div class="column mobile-100 desktop-33-right">
        {% if not node.field_payment_info.isempty %}
        <div class="list-item">
          {{ content.field_payment_info }}
        </div>
        {% endif %}
        {% if not node.field_links.isempty %}
        <div class="list-item">
          {{ content.field_links }}
        </div>
        {% endif %}
        {% if not node.field_need_to_know.isempty %}
        <div class="list-item">
          {{ content.field_need_to_know }}
        </div>
        {% endif %}
        {% if not node.field_contact.isempty %}
        <div class="contact-info">
          {{ content.field_contact }}
        </div>
        {% endif %}
        {% if not node.field_sidebar_components.isempty %}
        <div class="list-item-wrapper">
          {{ content.field_sidebar_components }}
        </div>
        {% endif %}
      </div><!-- end .desktop-33-right -->
      <div class="clearfix"></div>
    </div><!-- end .tabbed-info-wrapper -->

