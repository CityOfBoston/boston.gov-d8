<div class="breadcrumb" data-swiftype-index="false">
  {{ drupal_block('system_breadcrumb_block') }}
</div>

<article{{ attributes }}>
  <div class="person-profile-info-wrapper b-c">
    <div class="g">
      <div class="column g--4 sidebar">
        <ul class="sb">
          {% if content.field_person_photo|render  %}
          <li class="sb-i">
            {{ content.field_person_photo }}
          </li>
          {% endif %}
          {% if content.field_phone_number|render  %}
          <li class="sb-i">
            {{ content.field_phone_number }}
          </li>
          {% endif %}
          {% if content.field_email|render  %}
          <li class="sb-i">
            {{ content.field_email }}
          </li>
          {% endif %}
          {% if content.field_address|render  %}
          <li class="sb-i">
            {{ content.field_address }}
          </li>
          {% endif %}
          {% if content.field_year_elected|render  %}
          <li class="sb-i">
            {{ content.field_year_elected }}
          </li>
          {% endif %}
          {% if content.field_political_party|render  %}
          <li class="sb-i">
            {{ content.field_political_party }}
          </li>
          {% endif %}
          {% if content.field_sidebar_components|render  %}
            <li class="sb-i">
              {{ content.field_sidebar_components }}
            </li>
          {% endif %}
        </ul>
      </div>
      <div class="column g--8">

        {{ title_prefix }}

        <h1 {{ title_attributes }}>
          {{ title }}
        </h1>

        {{ title_suffix }}

        {% if content.field_position_title %}
          {{ content.field_position_title }}
        {% endif %}

        {% if content.field_description %}
          {{ content.field_description }}
        {% endif %}
      </div>
    </div>
  </div>

  {% if content.field_components["#items"] %}
    <div class="person-profile-components desktop-100" {{ content_attributes }}>
      {{ content.field_components }}
    </div>
  {% endif %}

</article>
