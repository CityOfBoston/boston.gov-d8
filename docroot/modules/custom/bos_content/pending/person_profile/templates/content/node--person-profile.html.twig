{#
 * @file
 * Returns the HTML for a node.
 *
 * Complete documentation for this file is available online.
 *
 * @see https%0%
 #}
<article class="{{ classes }} clearfix node-{{ node.nid }}"{{ attributes }}>
  <div class="person-profile-info-wrapper desktop-100 clearfix">
    <div class="column mobile-100 desktop-66-right">
      <h1 class="person-profile-display-name">
        {{ title }}
      </h1>
      {% if content.field_position_title %}
        <div class="person-profile-position-title">
          {{ content.field_position_title }}
        </div>
      {% endif %}
      {% if content.field_description %}
        <div class="person-profile-bio squiggle-border-top">
          {{ content.field_description }}
        </div>
      {% endif %}
    </div>
    <div class="column mobile-100 desktop-33-left sidebar">
      {% if content.field_person_photo %}
        <div class="list-item person-profile-photo">
          {{ content.field_person_photo }}
        </div>
      {% endif %}
      {% if content.field_phone_number %}
        <div class="list-item">
          {{ content.field_phone_number }}
        </div>
      {% endif %}
      {% if content.field_email %}
        <div class="list-item">
          {{ content.field_email }}
        </div>
      {% endif %}
      {% if content.field_address %}
        <div class="list-item">
          {{ content.field_address }}
        </div>
      {% endif %}
      {% if content.field_year_elected %}
        <div class="list-item ">
          {{ content.field_year_elected }}
        </div>
      {% endif %}
      {% if content.field_political_party %}
        <div class="list-item">
          {{ content.field_political_party }}
        </div>
      {% endif %}
      {% if content.field_sidebar_components %}
        {{ content.field_sidebar_components }}
      {% endif %}
    </div>
  </div>
  {% if content.field_components %}
    <div class="person-profile-components desktop-100" {{ content_attributes }}>
      {{ content.field_components }}
    </div>
  {% endif %}
</article>
