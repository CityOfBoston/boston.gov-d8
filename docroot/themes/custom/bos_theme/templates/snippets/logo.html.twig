{% if site_name %}
  <div class="lo lo--abs">
    <div class="lo-l">
      <a href="{{ front_page }}">
        <img src="{{ asset_url }}/images/{{ asset_name }}/logo.svg?{{ cache_buster }}" alt="{{ site_name }}" class="lo-i" />
      </a>
      {% if !hide_logo %}
        <span class="lo-t"><a href="https://www.boston.gov/mayor">Mayor Martin J. Walsh</a></span>
      {% endif %}
    </div>
  </div>
{% endif %}
