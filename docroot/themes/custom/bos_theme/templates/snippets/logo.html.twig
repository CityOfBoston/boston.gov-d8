{% if site_name %}
  {% set dateTime = date().timestamp %}
  {% set mayor_name =  "Martin J. Walsh" %}
    {% if dateTime >=  1616497200 %}
      {% set mayor_name = "Kim Janey" %}
    {% endif %}
    <div class="lo lo--abs">
      <div class="lo-l lo-b-cont">
        <a href="{{ front_page }}" id="logoImg">
          <img src="{{ asset_url }}/images/{{ asset_name }}/logo.svg?{{ cache_buster }}" alt="{{ site_name }}" class="lo-i" />
        </a>
        {% if not hide_logo %}
          <span class="lo-t"><a href="/mayor">Mayor {{ mayor_name }}</a></span>
        {% endif %}
      </div>
    </div>
{% endif %}
